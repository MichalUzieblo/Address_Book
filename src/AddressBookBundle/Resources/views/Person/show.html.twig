{% extends "::base.html.twig" %}

{% block title %}{{person.name}} {{person.surname}}{% endblock %}

{% block body %}
<h1>{{person.name}} {{person.surname}}</h1>
<hr>
{% for phone in person.phones %}
    <a href="tel:{{phone.number}}">
        {{phone.number}} - {{phone.type}}
    </a><br>
{% endfor%}
<hr>
<div class="well">
    {{person.description}}
</div>
{% endblock %}
